[alias]
	# see: https://github.com/GitAlias/gitalias/blob/master/README.md#popular-examples
	# see: https://stackoverflow.com/a/9463536/6314470
	a = add
	aa = add --all
	ap = add --patch
	b = branch
	c = commit
	ca = commit --amend
	caa = commit --amend --no-edit
	cam = commit --amend --message
	cho = checkout
	ci = commit --interactive
	cm = commit --message
	d = diff
	ds = diff --staged
	dsw = diff --staged --ignore-all-space
	dsww = diff --staged --word-diff=color
	dw = diff --ignore-all-space
	dww = diff --word-diff=color
	f = fetch
	fa = fetch --all
	fwl = push --force-with-lease
	l = log
	ll = log --abbrev-commit --all --boundary --decorate --graph --topo-order --date=short --pretty=format:'%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%cn]%Creset %Cblue%G?%Creset'
	rb = rebase
	rbi = rebase --interactive
	s = status --short --untracked-files=all
	setexe = update-index --chmod=+x
	sh = show
	sub = submodule
