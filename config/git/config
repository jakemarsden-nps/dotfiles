[alias]
	# see: https://github.com/GitAlias/gitalias/blob/master/README.md#popular-examples
	# see: https://stackoverflow.com/a/9463536/6314470
	a = add
	aa = add --all
	ap = add --patch
	b = branch
	c = commit
	ca = commit --amend
	caa = commit --amend --no-edit
	cam = commit --amend --message
	ci = commit --interactive
	d = diff
	dc = diff --cached
	dcw = diff --cached --ignore-all-space
	dw = diff --ignore-all-space
	f = fetch --all
	fwl = push --force-with-lease
	l = log
	ll = log --abbrev-commit --all --boundary --decorate --graph --topo-order --date=short --pretty=format:'%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %Cbule[%cn]%Creset %Cblue%G?%Creset'
	rb = rebase
	rbi = rebase --interactive
	s = status --short
	sh = show

[branch]
	autosetuprebase = always

[color]
	branch = auto
	diff = auto
	status = auto

[core]
	editor = vim
	pager = less

[diff]
	algorithm = histogram

[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f

[format]
	#pretty = format:%C(auto,yellow)%h%C(auto,magenta)% G? %C(auto,blue)%>(12,trunc)%ad %C(auto,green)%<(6,trunc)%aN%C(auto,red)%d %C(auto,reset)%s

[log]
	date = relative

[user]
	name = Jake Marsden
	email = jakemarsdenjm@gmail.com
